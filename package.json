{
  "private": true,
  "name": "kiwari-labs-contracts",
  "version": "1.0.2",
  "license": "Apache-2.0",
  "author": "kiwari-labs <kiwarilabs@protonmail.com> (https://github.com/Kiwari-Labs)",
  "files": [
    "contracts/**/*.sol"
  ],
  "scripts": {
    "clean": "npx hardhat clean && rm -rf cache coverage coverage.json",
    "compile": "npm run clean && npx hardhat compile --force",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js",
    "coverage:clean": "npm run clean && npx hardhat coverage --solcoverjs ./.solcover.js",
    "docgen": "npx hardhat docgen",
    "format": "yarn prettier:sol && yarn prettier:ts",
    "prettier:packages": "prettier-package-json --write ./contracts/package.json ./package.json",
    "prettier:sol": "prettier --write --plugin=prettier-plugin-solidity '**/*.sol'",
    "prettier:ts": "prettier --write '**/*.ts'",
    "run:node": "npx hardhat node",
    "test": "npx hardhat test",
    "test:clean": "npm run clean && npx hardhat test",
    "test:parallel": "npx hardhat test --parallel",
    "commit": "npx git-cz",
    "prepare": "husky",
    "build": "cd ./contracts/ && yarn prepare"
  },
  "dependencies": {},
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.3",
    "@types/lodash": "^4.17.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.19.2",
    "chai": "^4.3.4",
    "dotenv": "^16.3.1",
    "ethers": "^6.13.4",
    "git-cz": "^4.9.0",
    "hardhat": "^2.22.15",
    "hardhat-gas-reporter": "^2.2.0",
    "hardhat-ignore-warnings": "^0.2.11",
    "hardhat-storage-layout": "^0.1.7",
    "husky": "^9.1.7",
    "lodash": "^4.17.21",
    "prettier": "^3.1.0",
    "prettier-package-json": "^2.8.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solidity-coverage": "^0.8.5",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2",
    "unix-timestamp": "^1.1.0"
  },
  "keywords": [
    "smart contracts",
    "solidity"
  ]
}
